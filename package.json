  "scripts": {
    "docker:rebuild": "run-s docker:build docker:run",
    "docker:build": "docker build -t todo-printer:latest -f ../docker/Dockerfile ..",
    "docker:run": "docker run todo-printer:latest -p 6363:6363",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "git": "run-s git:add git:commit git:push",
    "git:commit": "git commit -m \"update dependencies\"",
    "git:add": "git add package.json package-lock.json",
    "git:push": "git push",
    "dependencies:update": "ncu -u -x typescript,ngx-mqtt",
    "dependencies:install": "npm install",
    "update:dependencies and build": "run-s dependencies:update dependencies:install build git"
  },
  "dependencies": {
    "@nestjs/common": "7.6.15",
    "@nestjs/core": "7.6.15",
    "@nestjs/platform-express": "7.6.15",
    "@nestjs/swagger": "4.8.0",
    "lodash": "4.17.21",
    "dotenv": "8.2.0",
    "escpos": "3.0.0-alpha.6",
    "escpos-usb": "3.0.0-alpha.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7",
    "swagger-ui-express": "4.1.6",
    "todoist": "0.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "7.3.1",
    "@nestjs/testing": "7.6.15",
    "@types/express": "4.17.11",
    "@types/node": "14.14.37",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.23.0",
    "eslint-plugin-import": "2.22.1",
    "supertest": "6.1.3",
    "ts-loader": "8.1.0",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.4",
    "npm-check-updates": "11.3.0",
    "npm-run-all": "4.1.5"
  }
}
